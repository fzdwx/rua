{
  "id": "fzdwx.todo-list",
  "name": "todo-list",
  "version": "0.1.0",
  "description": "TODO List",
  "author": "fzdwx",
  "rua": {
    "engineVersion": "^0.1.0",
    "ui": {
      "entry": "dist/index.html"
    },
    "actions": [
      {
        "name": "main",
        "title": "todo-list",
        "mode": "view",
        "keywords": ["todo-list"],
        "icon": "./icon.png",
        "subtitle": "TODO List"
      }
    ]
  },
  "permissions": [
    "clipboard",
    "notification",
    "storage",
    "http",
    {
      "permission": "shell",
      "allow": [
        {
          "cmd": {
            "program": "echo",
            "args": [".+"]
          }
        }
      ]
    },
    {
      "permission": "fs:read",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "permission": "fs:read-dir",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "permission": "fs:write",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "permission": "fs:exists",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "permission": "fs:stat",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}
