{
  "id": "example.hello-ext",
  "name": "Hello Extension",
  "version": "1.0.0",
  "description": "A simple example extension demonstrating the Rua extension system",
  "author": "Rua Team",
  "rua": {
    "engineVersion": "^0.1.0",
    "ui": {
      "entry": "index.html"
    },
    "init": "init.js",
    "actions": [
      {
        "name": "hello-world",
        "title": "Hello World",
        "mode": "view",
        "keywords": ["hello", "world", "example", "demo"],
        "icon": "tabler:hand-wave",
        "subtitle": "A simple greeting action"
      },
      {
        "name": "say-goodbye",
        "title": "Say Goodbye",
        "mode": "command",
        "keywords": ["bye", "goodbye"],
        "icon": "tabler:door-exit",
        "subtitle": "Log a goodbye message",
        "script": "goodbye.js"
      }
    ]
  },
  "permissions": ["notification", "storage"]
}
