{
  "name": "rua-monorepo",
  "private": true,
  "version": "0.4.8",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/rua dev",
    "build": "bun run --cwd apps/rua build",
    "preview": "bun run --cwd apps/rua preview",
    "tauri": "bun run --cwd apps/rua tauri",
    "tauri-build": "bun run --cwd apps/rua tauri-build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" && cargo fmt --manifest-path apps/rua/src-tauri/Cargo.toml",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" && cargo fmt --manifest-path apps/rua/src-tauri/Cargo.toml --check",
    "format:ts": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:rust": "cargo fmt --manifest-path apps/rua/src-tauri/Cargo.toml",
    "format:changed": "git diff --name-only --diff-filter=ACMR HEAD | grep -E '\\.(ts|tsx|js|jsx|json|css|md)$' | xargs -r prettier --write; cargo fmt --manifest-path apps/rua/src-tauri/Cargo.toml",
    "format:staged": "git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.(ts|tsx|js|jsx|json|css|md)$' | xargs -r prettier --write; cargo fmt --manifest-path apps/rua/src-tauri/Cargo.toml"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tiny-invariant": "^1.3.1",
    "@iconify/react": "^6.0.2",
    "ahooks": "^3.9.5",
    "fuse.js": "^7.1.0",
    "@base-ui-components/react": "^1.0.0-rc.0",
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-virtual": "^3.0.1",
    "pinyin-match": "^1.2.10",
    "radix-ui": "^1.4.3",
    "class-variance-authority": "^0.7.1",
    "tailwindcss-animate": "^1.0.7",
    "tauri-api-adapter": "^0.3.27",
    "tw-animate-css": "^1.4.0",
    "shadcn": "^3.6.0",
    "kkrpc": "^0.6.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6"
  }
}
